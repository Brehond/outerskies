# Production Environment Variables for Outer Skies
# Copy this file to .env.production and update with your actual values

# Django Settings
DJANGO_SETTINGS_MODULE=astrology_ai.settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here-make-it-long-and-random
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ENVIRONMENT=production

# Database Configuration (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_pass
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# AI Integration
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Payment Integration (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Security and Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_SALT=your-encryption-salt-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Cache Configuration
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://:your-secure-redis-password@redis:6379/1

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Celery Settings
CELERY_BROKER_URL=redis://:your-secure-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-secure-redis-password@redis:6379/0
CELERY_ALWAYS_EAGER=False

# AWS Settings (optional - for S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com

# SSL/TLS Settings
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket-name

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
CELERY_WORKERS=2

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING_ENABLED=True 